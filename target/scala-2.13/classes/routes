# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       controllers.HomeController.greetings()

GET     /restaurant/:restaurantName             controllers.RestaurantController.showRestaurantCard(restaurantName : String)
GET     /restaurant/edit/:restaurantName        controllers.RestaurantController.editRestaurant(restaurantName : String)
POST    /restaurant/update/:restaurantName      controllers.RestaurantController.updateRestaurant(restaurantName : String)
GET     /restaurant/create/                     controllers.RestaurantController.createRestaurant()
POST    /restaurant/create/                     controllers.RestaurantController.saveRestaurantChanges()
GET     /restaurant/delete/:restaurantName      controllers.RestaurantController.destroyRestaurant(restaurantName : String)

GET     /visitor/:visitorName                   controllers.VisitorController.showVisitorCard(visitorName : String)
GET     /visitor/edit/:visitorName              controllers.VisitorController.editVisitor(visitorName : String)
POST    /visitor/update/:visitorName            controllers.VisitorController.updateVisitor(visitorName : String)
GET     /visitor/create/                        controllers.VisitorController.createVisitor()
POST    /visitor/create/                        controllers.VisitorController.saveVisitorChanges()
GET     /visitor/delete/:visitorName            controllers.VisitorController.destroyVisitor(visitorName : String)

POST    /accept/:restaurantName/:visitorName    controllers.RestaurantController.acceptVisitor(restaurantName: String, visitorName: String)
POST    /kick/:restaurantName/:visitorName      controllers.RestaurantController.kickVisitor(restaurantName: String, visitorName: String)

GET    /error                                  controllers.HomeController.showError(message: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file)