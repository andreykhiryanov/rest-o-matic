# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET /   controllers.HomeController.greetings()


GET /restaurant/:restaurantName controllers.HomeController.show(restaurantName : String)
GET /restaurant/edit/:restaurantName controllers.HomeController.editRestaurant(restaurantName : String)
POST /restaurant/edit controllers.HomeController.update()
GET /restaurant/create/ controllers.HomeController.createRestaurant()
POST /restaurant/create/ controllers.HomeController.saveChanges()
GET /restaurant/delete/:restaurantName controllers.HomeController.destroy(restaurantName : String)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)